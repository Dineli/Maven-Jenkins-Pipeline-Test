pipeline {
    agent any

    tools {
        maven "MAVEN_HOME"
        jdk "JAVA_HOME"
    }

    stages {
        stage('Initialize'){
            steps{
                echo "PATH = ${M2_HOME}/bin:${PATH}"                
            }
        }
        stage('Build') {
            steps {
                dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\ample-Multi-Branch-Pipeline_main\\java-maven-junit-helloworld-master") {
					echo "clean & install"
					bat "mvn clean install -DskipTests=true"
				}
            }
        }
		stage('Test'){
			steps {
				dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\ample-Multi-Branch-Pipeline_main\\java-maven-junit-helloworld-master") {
					bat "mvn test"
					bat "mkdir surefire-reports"
					bat "copy target\\surefire-reports surefire-reports"
					junit '**/surefire-reports/TEST-*.xml'
				}
			}
		}
		
		stage('Deploy'){
			steps {
				dir("C:\\ProgramData\\Jenkins\\.jenkins\\workspace\\ample-Multi-Branch-Pipeline_main\\java-maven-junit-helloworld-master") {
					echo "run jar"
					bat "java -cp target\\java-maven-junit-helloworld-2.0-SNAPSHOT.jar com.example.javamavenjunithelloworld.HelloApp"
				}
			}
		}
     }
 
}
